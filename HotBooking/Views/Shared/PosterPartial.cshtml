<div class="poster">
    <img src="~/images/back.jpg" alt="" class="poster__back">
    <div class="container">
        <div class="poster__column">
            <div class="poster__heading">
                <p>Book hotels anywhere in the world</p>
                <p>In a few seconds!!!</p>
            </div>
            <div class="poster__form-block">
                <form action="" class="poster__form form">
                    <div class="form__row">
                        <div class="form__item-column">
                            <label for="hotels_name">Input hotels name or city</label>
                            <input type="text" id="hotels_name" placeholder="Hotels name or city">
                        </div>

                        <div class="form__item-column">
                            <label for="arrival_date">Arrival date</label>
                            <input type="date" id="arrival_date">
                        </div>

                        <div class="form__item-column">
                            <label for="departure_date">Date of departure</label>
                            <input type="date" id="departure_date">
                        </div>

                        <div class="form__item-column">
                            <label for="number_of_children">Children</label>
                            <input type="number" id="number_of_children" class="form__number" min="0" max="6">
                        </div>

                        <div class="form__item-column">
                            <label for="number_of_adults">Adults</label>
                            <input type="number" id="number_of_adults" class="form__number" value="1" min="1" max="9">
                        </div>

                        <div class="form__item-column">
                            <label for="number_of_adults">Rooms</label>
                            <input type="number" id="number_of_rooms" class="form__number" value="1" min="1" max="9">
                        </div>
                        <button type="submit" class="submit">Check prices</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>