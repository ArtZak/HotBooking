@model Hotel
@{
    ViewBag.TableName = "Hotel";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <br>
    <main class="container">
        <a asp-area="Admin" asp-controller="Home" asp-action="Read" class="btn btn-success">Back</a>
        <hr />
        <form asp-area="Admin" asp-controller="Hotels" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label for="table_name" class="form-label">Table</label>
                <input value="@ViewBag.TableName" disabled name="table" type="text" class="form-control" id="table_name">
            </div>
            <div class="mb-3" hidden>
                <label asp-for="Id" class="form-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id"></span>
            </div>
            <div class="mb-3" hidden>
                <label asp-for="ReviewRating" class="form-label"></label>
                <input asp-for="ReviewRating" class="form-control" />
                <span asp-validation-for="ReviewRating"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Id" class="form-label"></label>
                <input asp-for="Id" disabled class="form-control" />
                <span asp-validation-for="Id"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TitleEn" class="form-label"></label>
                <input asp-for="TitleEn" class="form-control" />
                <span asp-validation-for="TitleEn"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubtitleEn" class="form-label"></label>
                <input asp-for="SubtitleEn" class="form-control" />
                <span asp-validation-for="SubtitleEn"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TitleArm" class="form-label"></label>
                <input asp-for="TitleArm" class="form-control" />
                <span asp-validation-for="TitleArm"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubtitleArm" class="form-label"></label>
                <input asp-for="SubtitleArm" class="form-control" />
                <span asp-validation-for="SubtitleArm"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Adress" class="form-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TextEn" class="form-label"></label>
                <textarea asp-for="TextEn" class="form-control"></textarea>
                <span asp-validation-for="TextEn"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TextArm" class="form-label"></label>
                <textarea asp-for="TextArm" class="form-control"></textarea>
                <span asp-validation-for="TextArm"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Stars" class="form-label"></label>
                <input type="number" max="5" min="1" asp-for="Stars" class="form-control" />
                <span asp-validation-for="Stars"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DistanceToCenter" class="form-label"></label>
                <input type="number" asp-for="DistanceToCenter" class="form-control" />
                <span asp-validation-for="DistanceToCenter"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Food" class="form-label"></label>
                <input type="text" asp-for="Food" class="form-control" />
                <span asp-validation-for="Food"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IsFavorite" class="form-label"></label>
                <input asp-for="IsFavorite" class="form-check-input" />
                <span asp-validation-for="IsFavorite"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TitleImagePath" class="form-label"></label>
                <input type="file" name="titleImageFile" class="form-control" accept="image/*" />
                <input type="text" name="defaultImagePath" hidden value="@Model.TitleImagePath" />
                <div>
                    <img src="~/@Model.TitleImagePath" alt="" />
                </div>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label"></label>
                <select name="city" asp-items="(List<SelectListItem>)ViewBag.Cities" class="form-select"></select>
            </div>
            <div class="mb-3">
                <label for="facilities" class="form-label"></label>
                <select multiple="multiple" name="facilities" asp-items="(List<SelectListItem>)ViewBag.Facilities" class="form-select"></select>
            </div>           

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </main>
</body>

</html>